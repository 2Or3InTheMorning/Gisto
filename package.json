{
  "name": "gisto",
  "version": "1.9.22",
  "description": "Gisto is a Cross-platform snippets management desktop application that allows you and/or your team share code snippets fast and easily. Based on GitHub Gists Infrastructure which means you can use all your existing snippets by connecting your GitHub account! Gisto started as an attempt to fulfill the lack of a syntax highlighted and cloud synchronized code snippet solution. You may think of Gisto as Evernote for code.",
  "productName": "Gisto",
  "scripts": {
    "ng": "ng",
    "build": "ng build --dev",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "start": "ng serve --aot",
    "version:patch": "npm --no-git-tag-version version patch && cd src/electron/ && npm --no-git-tag-version version patch && cd -",
    "clean": "rimraf dist release",
    "app": "cross-env NODE_ENV=production npm run clean && ng build --prod --base-href='.' && ./node_modules/.bin/electron ./dist/",
    "app:dev": "cross-env NODE_ENV=development concurrently \"npm run clean\" \"ng serve --dev --base-href='/'\" \"./node_modules/.bin/electron ./src/electron/\"",
    "pack:mac": "cross-env NODE_ENV=production npm run clean && ng build --prod --base-href='.' && npx electron-builder build --m --publish=always",
    "pack:win": "cross-env npm run clean && ng build --prod --base-href='.' && npx electron-builder build -w --x64 --ia32 --publish=always",
    "pack:linux": "cross-env NODE_ENV=production npm run clean && ng build --prod --base-href='.' && npx electron-builder build --l --x64 --publish=always",
    "pack:all": "cross-env NODE_ENV=production npm run clean && ng build --prod --base-href='.' && npx electron-builder build -mwl --x64 --publish=always",
    "pack:build": "cross-env npm run clean && ng build --prod --base-href='.' && npx electron-builder build --publish=always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gisto/gisto.git"
  },
  "bugs": {
    "url": "https://github.com/gisto/gisto/issues"
  },
  "homepage": "http://www.gistoapp.com/",
  "keywords": [
    "gisto",
    "gist",
    "code",
    "snippets"
  ],
  "authors": [
    {
      "name": "Maayan Glikser",
      "url": "http://www.glikm.com"
    },
    {
      "name": "Sasha Khamkov",
      "url": "http://www.sanusart.com"
    }
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "dependencies": {
    "@angular/animations": "6.0.1",
    "@angular/common": "6.0.1",
    "@angular/compiler": "6.0.1",
    "@angular/compiler-cli": "6.0.1",
    "@angular/core": "6.0.1",
    "@angular/forms": "6.0.1",
    "@angular/http": "6.0.1",
    "@angular/platform-browser": "6.0.1",
    "@angular/platform-browser-dynamic": "6.0.1",
    "@angular/router": "6.0.1",
    "@types/electron": "^1.6.10",
    "@types/lodash": "^4.14.104",
    "angular-highlight-js": "^2.0.1",
    "angular2-hotkeys": "^2.0.4",
    "angular2-markdown": "^2.2.3",
    "core-js": "^2.5.3",
    "dotenv": "^5.0.1",
    "electron-log": "^2.2.14",
    "electron-updater": "^2.21.0",
    "lodash": "^4.17.5",
    "mobx": "^4.1.1",
    "mobx-angular": "^3.0.1",
    "mobx-wiretap": "^0.13.1",
    "ng2-ace-editor": "^0.3.4",
    "ngx-electron": "^1.0.4",
    "rxjs": "^6.1.0",
    "rxjs-compat": "^6.1.0",
    "superagent": "^3.8.2",
    "superagent-no-cache": "^0.1.1",
    "typescript": "2.7.2",
    "uuid": "^3.2.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "6.0.1",
    "@angular/compiler-cli": "6.0.1",
    "@angular/language-service": "6.0.1",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^9.6.5",
    "codelyzer": "~4.2.1",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "devtron": "^1.4.0",
    "electron": "^1.8.3",
    "electron-builder": "^20.4.0",
    "electron-debug": "^1.5.0",
    "electron-publisher-s3": "^20.2.0",
    "electron-reload": "^1.2.2",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-jasmine": "^1.1.1",
    "karma-jasmine-html-reporter": "^1.0.0",
    "mimic": "^2.0.2",
    "protractor": "~5.3.1",
    "rimraf": "^2.6.2",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "2.7.2",
    "@angular-devkit/build-angular": "~0.6.1"
  },
  "build": {
    "directories": {
      "app": "dist",
      "buildResources": "build",
      "output": "release"
    },
    "appId": "com.gistoapp.gisto2",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "mac": {
      "publish": {
        "provider": "s3",
        "bucket": "gisto-releases"
      },
      "category": "public.app-category.productivity",
      "icon": "build/icon.png"
    },
    "dmg": {
      "publish": {
        "provider": "s3",
        "bucket": "gisto-releases"
      },
      "window": {
        "width": 540,
        "height": 328
      },
      "contents": [
        {
          "x": 100,
          "y": 200
        },
        {
          "x": 440,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "publish": {
        "provider": "s3",
        "bucket": "gisto-releases"
      },
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "maintainer": "Sasha Khamkov <sanusart@gmail.com>",
      "publish": {
        "provider": "s3",
        "bucket": "gisto-releases"
      },
      "target": [
        "deb",
        "rpm",
        "pacman",
        "AppImage",
        "snap"
      ],
      "synopsis": "Gisto - snippets made awesome",
      "category": "Development"
    }
  }
}
